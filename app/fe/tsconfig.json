{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "moduleResolution": "Bundler",
        "allowImportingTsExtensions": true,
        "module": "ESNext",
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "useDefineForClassFields": true,
        "paths": {
            "@*": ["./src/*"],
            "utils": ["../utils.ts"]
        }
    },
    "include": ["src/**/*", "vite.config.ts"]
}
